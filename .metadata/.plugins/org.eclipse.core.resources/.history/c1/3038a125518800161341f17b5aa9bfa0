package aStarAlg;

public class Cell {
    public int coordinateX, coordinateY;
    public char type;
    public double cost;
    public int index;
    public Point point;
    public Cell parent = null;
    public Cell child = null;

    public  Cell(int x, int y){
        coordinateX = x;
        coordinateY = y;
        type = '1';
        cost = 1.0;
        index = 0;
        point.x = x;
        point.y = y;

    }
    public void setcoordinate(int x, int y){
        coordinateX = x;
        coordinateY = y;
    }

    public void setcelltype(char t){
        type = t;
    }

    public void setcost(float c){
        cost = c;
    }
    
    public int getx(){
    	return coordinateX;
    }
    public int gety(){
    	return coordinateX;
    }
}
